<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.earthmileslftr.earthmiles"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
        <activity android:name="com.earthmileslftr.earthmiles.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.facebook.LoginActivity"></activity>
        <activity android:name="com.earthmileslftr.earthmiles.UserDetailsActivity"></activity>
        <activity android:name="com.earthmileslftr.earthmiles.RunKeeperActivity"></activity>
        <activity android:name="com.earthmileslftr.earthmiles.RunKeeperDetailsActivity"></activity>
    </application>

</manifest>
